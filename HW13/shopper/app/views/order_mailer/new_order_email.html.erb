<h1>Order#new_order_email</h1>

<%= @user.email%> order created successfully.  Your Order <%= @line_items %>

  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    <table class="table table-hover">
    <thead>
      <tr>
        <th></th>
        <th scope="col">Image</th>
        <th scope="col">Name</th>
        <th scope="col">Quantity</th>
        <th scope="col">Price</th>
      </tr>
    </thead>
    <tbody>
    <% @line_items.each.with_index do |line_item, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <th scope="row"><%= image_tag image_url(line_item.product.image), width: 80, height: 80 %></th>
        <td><%= line_item.product.name %></td>
        <td>
        <div class="container">
          <div class="row row-cols-2 row-cols-lg-3">
            <div class="col">
              <%= line_item.quantity %>
            </div>
          </div>
        </div>
        </td>
        <td><%= number_to_currency(line_item.total_price) %></td>
      </tr>
      <% end %>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td>Total price: <%= number_to_currency @order.cart.total_price %></td>
    </tbody>
    </table>